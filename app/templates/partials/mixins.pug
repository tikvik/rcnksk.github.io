mixin mfooter (footerData)
	-  var ni = footerData+1
	-  var pi = footerData-1
	if (footerData >= projects.length -1)
		- var ni = 0
	if (footerData <= 0)
		- var pi = projects.length -1;
	br
	.pag-info.hidelg
	.pag-info2.hidelg

	.footer
		.footer-left

			.pag-info.hidemob
			br
			span
				a.nav-link(href="single" + pi + ".html") Prev project
		div.project-text-modal
			if projects[i]
				| !{projects[i].project[0].title}
			br
			span
				if projects[i]
					| #{projects[i].project[0].rok}
				br
				a.open-button.nav-link.active(href="#",onclick="return false" ) Text
		div.footer-right
			.pag-info2.hidemob
			br
			span
				a.nav-link(href="single" + ni + ".html") Next project


mixin mimages (index)
	.grid#content
		ul.grid-ul
			li
				div.carousel
					if gimg[index]
						each item, i in gimg[index][0]
							div
								div.pmodal-ico(onclick="mymodal()")
									img(src=item)




				

			li
				div.carousel2
					if gimg[index]
						each item in gimg[index][1]
							div
								div.pmodal-ico(onclick="mymodal2()")
									img(src=item)
		

	.modal-wrap.closed#modal
		.modal-window
			.modal-close#close-button
				a(class="nav-link", href="#",onclick="return false" )
					img(src="images/ico_close.svg", alt="")
			.modal-content
				if projects[i] 
					h1 !{projects[i].project[0].title}<br><br>
					p !{projects[i].project[0].text}
					table
						if (projects[i].project[0].klient !="")
							tr
								td Klient
								td !{projects[i].project[0].klient}
						if (projects[i].project[0].lokace !="")
						tr
							td Lokace
							td !{projects[i].project[0].lokace}
						if (projects[i].project[0].typologie != "")
							tr
								td Typologie
								td 
									each item in projects[i].project[0].typologie
										span !{item}<br>
						if (projects[i].project[0].typ != "")			
							tr
								td Typ
								td !{projects[i].project[0].typ}
						tr
							td Rok
							td !{projects[i].project[0].rok}
						if (projects[i].project[0].status != "")	
							tr
								td Status
								td !{projects[i].project[0].status}
						if (projects[i].project[0].uzplocha != "")	
							tr
								td Užitná plocha
								td !{projects[i].project[0].uzplocha}
						if (projects[i].project[0].velikost != "")
							tr
								td Velikost
								td !{projects[i].project[0].velikost}
						if (projects[i].project[0].naklady != "")	
							tr
								td Náklady
								td !{projects[i].project[0].naklady} Kč
						if (projects[i].project[0].autori != "")
							tr
								td Autoři
								td !{projects[i].project[0].autori}
						if (projects[i].project[0].spoluautori != "")
							tr
								td Spoluautoři
								td !{projects[i].project[0].spoluautori}
						if (projects[i].project[0].odbspoluprace != "")
							tr
								td Spolupráce 
								td 
									each item in projects[i].project[0].odbspoluprace
										span !{item.profese}: !{item.name}<br>
									
								

				




